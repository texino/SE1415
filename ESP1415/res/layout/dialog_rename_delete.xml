<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/dialog_garbage"
        android:layout_width="@dimen/row_image_size"
        android:layout_height="@dimen/row_image_size"
        android:layout_gravity="center"
        android:clickable="true"
        android:contentDescription="@string/picture_descriptor2"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_action_discard" />

    <EditText
        android:id="@+id/renamesession"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="@string/hint_dialog_1"
        android:inputType="text"
        android:maxLength="@integer/name_lenght"
        android:maxLines="1" />

</LinearLayout>