<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_action_bar"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/action_bar_color" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/action_bar_image_size"
            android:layout_height="@dimen/action_bar_image_size"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/action_bar_margins"
            android:layout_marginStart="@dimen/action_bar_margins"
            android:background="@drawable/shape_image"
            android:contentDescription="@string/description_image"
            android:src="@drawable/image_session_running" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/action_bar_margins"
            android:layout_marginLeft="@dimen/action_bar_margins"
            android:layout_marginRight="@dimen/action_bar_margins"
            android:layout_marginStart="@dimen/action_bar_margins"
            android:layout_marginTop="@dimen/action_bar_margins"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/texts_action_bar_color" />

        <TextView
            android:id="@+id/text_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_name"
            android:layout_marginBottom="@dimen/action_bar_margins"
            android:layout_marginEnd="@dimen/action_bar_margins"
            android:layout_marginLeft="@dimen/action_bar_margins"
            android:layout_marginRight="@dimen/action_bar_margins"
            android:layout_marginStart="@dimen/action_bar_margins"
            android:layout_marginTop="@dimen/action_bar_margins"
            android:layout_toEndOf="@+id/image"
            android:layout_toRightOf="@+id/image"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/texts_secondary_action_bar_color" />

        <Button
            android:id="@+id/rename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/button_rename"
            android:drawableStart="@drawable/button_rename"
            android:height="16dp"
            android:minWidth="48dp"
            android:width="16dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/rename"
            android:layout_toStartOf="@+id/rename"
            android:drawableLeft="@drawable/button_delete"
            android:drawableStart="@drawable/button_delete"
            android:minWidth="48dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_duration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_action_bar"
        android:layout_marginTop="@dimen/layout_vertical_margins" >

        <TextView
            android:id="@+id/dummy_text_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/texts_duration"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/durata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dummy_text_duration"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/layout_vertical_margins" />
    </RelativeLayout>

    <ListView
        android:id="@+id/fall_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_duration"
        android:layout_marginTop="@dimen/layout_vertical_margins" />

    <ImageView
        android:id="@+id/image_bkg"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/layout_duration"
        android:layout_marginTop="@dimen/layout_vertical_margins"
        android:contentDescription="@string/description_image" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/shadow_height"
        android:layout_below="@+id/layout_action_bar"
        android:background="@drawable/shadow" />

</RelativeLayout>